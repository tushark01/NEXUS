# NEXUS Configuration
# Copy to .env and fill in your values

# LLM Providers (at least one required)
NEXUS_ANTHROPIC_API_KEY=sk-ant-...
NEXUS_OPENAI_API_KEY=sk-...

# Default provider: anthropic, openai, or ollama
NEXUS_DEFAULT_PROVIDER=anthropic

# Default models
NEXUS_ANTHROPIC_MODEL=claude-sonnet-4-20250514
NEXUS_OPENAI_MODEL=gpt-4o

# Ollama (optional, for local models)
NEXUS_OLLAMA_BASE_URL=http://localhost:11434
NEXUS_OLLAMA_MODEL=llama3

# Memory
NEXUS_MEMORY_CHROMA_DIR=./data/chroma
NEXUS_MEMORY_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Security
NEXUS_SECURITY_SANDBOX_ENABLED=true
NEXUS_SECURITY_AUDIT_LOG=./data/audit.jsonl

# Interfaces
NEXUS_API_HOST=127.0.0.1
NEXUS_API_PORT=8000
NEXUS_TELEGRAM_TOKEN=
NEXUS_DISCORD_TOKEN=
